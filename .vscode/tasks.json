{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build", //launch.json的preLaunchTask相对应
            "command": "g++", 
            "args": [
                "${workspaceFolder}/lib/*.cpp",
                "${workspaceFolder}/utest/*.cpp",
                "${file}",
                "-D __VSCODE__",
                "-o",
                "${workspaceRoot}/bin/${fileBasenameNoExtension}.exe",
                "-g", 
                "-Wall", 
                "-static-libgcc",
                //"-fexec-charset=GBK", //解决中文乱码
                //"-D__USE_MINGW_ANSI_STDIO",
            ], 
            "type": "shell", 
            "group": {
                "kind": "build",
                "isDefault": true 
            },
            "presentation": {
                "echo": true,
                "reveal": "always", 
                "focus": false, 
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
        }
    ]
}